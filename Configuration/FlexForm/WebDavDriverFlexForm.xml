<?xml version="1.0" encoding="utf-8"?>
<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<ROOT>
		<type>array</type>
		<el>
			<warning>
				<TCEforms>
					<label>Warning</label>
					<config>
						<type>user</type>
						<userFunc>TYPO3\FalWebdav\Backend\McryptWizard->main</userFunc>
					</config>
					<displayCond>USER:TYPO3\FalWebdav\Backend\McryptWizard->isNotInstalled</displayCond>
				</TCEforms>
			</warning>
			<baseUrl>
				<TCEforms>
					<label>WebDAV URL:</label>
					<config>
						<type>input</type>
						<default>http://webdav.domain.com/path/</default>
						<eval>trim</eval>
						<size>30</size>
					</config>
				</TCEforms>
			</baseUrl>
			<disableCertificateVerification>
				<TCEforms>
					<label>Disable server certificate verification</label>
					<config>
						<type>check</type>
					</config>
				</TCEforms>
			</disableCertificateVerification>
			<useAuthentication>
				<TCEforms>
					<label>Use authentication?</label>
					<config>
						<type>check</type>
					</config>
					<displayCond>USER:TYPO3\FalWebdav\Backend\McryptWizard->isInstalled</displayCond>
				</TCEforms>
			</useAuthentication>
			<username>
				<TCEforms>
					<label>Username:</label>
					<config>
						<type>input</type>
						<default>username</default>
						<size>30</size>
					</config>
					<displayCond>USER:TYPO3\FalWebdav\Backend\McryptWizard->isInstalled</displayCond>
				</TCEforms>
			</username>
			<password>
				<TCEforms>
					<label>Password:</label>
					<config>
						<type>input</type>
						<eval>password</eval>
						<size>30</size>
					</config>
					<displayCond>USER:TYPO3\FalWebdav\Backend\McryptWizard->isInstalled</displayCond>
				</TCEforms>
			</password>
		</el>
	</ROOT>
</T3DataStructure>
